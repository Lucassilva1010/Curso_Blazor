@page "/listas"

<h1><b>Listando Produtos</b></h1>

<h2>Imprimindo produtos - Foreach</h2>
<hr />
@foreach (var item in P)
{
    if (item.Nome.Contains("Computador"))
    {
        <h4><b>Promoção de 20% para todos os computadores</b></h4>
    }
    <tr>
        <td>

            <h3>Produto: @item.Nome</h3>
            <h3>Tipo: @item.Tipo</h3>
            <h3>Data de Cadastro: @item.DataCadastro.ToString("dd/MM/yy")</h3>
        </td>
    </tr>
    <hr />
}
<hr/>
<h1>Imprimindo produtos - For</h1>

@for (int i = 0; i < ListNova.Count; i++)
{

    if (i == ListNova.Count-1)
    {
        <h4><b>Esse é o meu Ultimo Produto cadastrado</b></h4>
    }
    <tr>
        <td>
            <h1>@i - Produto</h1>
            <ul>

            <li><h3>Nome: @ListNova[i].Nome</h3></li>
                <li><h3>Tipo: @ListNova[i].Tipo</h3></li>
                <li><h3>Data de Cadastro: @ListNova[i].DataCadastro.ToString("dd/MM/yy")</h3></li>
            </ul>
            
        </td>
    </tr>
    <hr />
}

